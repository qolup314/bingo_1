    <div id="return_button">
      <a class="return" href="/bingo_game">ビンゴ画面に戻る</a>
    </div>


    <script>
 
 
 var storage=localStorage;
      
      var d=new Date();
      Month=d.getMonth()+1; //getMonth()1月は0になる。
      time=d.getFullYear()+'/'+Month+'/'+d.getDate()+'/'+d.getHours()+'/'+d.getMinutes()+'/'+d.getSeconds()+'/'+d.getMilliseconds();

      var move=''; //'positive' data
      //var move_2=''; //'negative' data
      //var move_3=''; //'close' data
      var target_page_1_25=''; //whole data of this page
      var tg_1_25=storage.getItem('tg_1_25'); //a counter added to the key name//
      


      document.addEventListener('DOMContentLoaded', function(){
      
  
        //mouseenter
        document.getElementById('positive_1').addEventListener('mouseenter', function () {
          
          move=move+'positive'+',';
  
          //document.getElementById('output_1').textContent =move; 
      
        }, false);

        
        document.getElementById('return_button').addEventListener('click', function () {


          ID=storage.getItem('ID');
          target_page_1_25=ID+','+'target_page_1_25'+','+time+','+move;

          //document.getElementById('output_2').textContent =target_page_1_25; 

          tg_1_25=storage.getItem('tg_1_25'); //get a counter//
          tg_1_25=tg_1_25+1; //increment a counter//
          key='target_page_1_25'+'_'+tg_1_25; //set a new key name//
          storage.setItem(key, target_page_1_25); //store the value of target_page with a new key name//
          storage.setItem('tg_1_25', tg_1_25); // store a new key name//


        }, false);


        
      }, false);


    </script>



